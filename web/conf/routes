# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Application.index(order: String ?= "created", by: String ?="id")
GET		/page/:page					controllers.Application.page(page: Int, order: String ?= "created", by: String ?="id")
GET		/:id						controllers.Application.result(id: Int)
GET		/map						controllers.Application.map()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.at(path="/public", file)
