# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Application.index()
GET		/page/:n					controllers.Application.page(n: Int)
GET		/							controllers.Application.search(q: String ?= "")
GET		/:id						controllers.Application.result(id: Int)
GET		/:id/json					controllers.Application.resultAsJson(id: Int)
GET		/map						controllers.Application.map()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.at(path="/public", file)
